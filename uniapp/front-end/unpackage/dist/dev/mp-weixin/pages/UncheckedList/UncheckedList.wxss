
.container {
	padding: 20rpx;
}
.card {
	background-color: #f8f8f8;
	padding: 20rpx;
	margin-bottom: 20rpx;
	border-radius: 12rpx;
	box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
.label {
	font-weight: bold;
	margin-right: 10rpx;
}
.spacer {
	height: 10rpx;
}
.empty {
	text-align: center;
	color: #999;
	margin-top: 50rpx;
	font-size: 28rpx;
}
.action-buttons {
	display: flex;
	justify-content: flex-end;
	gap: 20rpx;
	margin-top: 20rpx;
}
