
.container {
    padding: 20rpx;
}
.input-group {
    margin-bottom: 30rpx;
}
.input-group text {
    display: block;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}
.input-group input,
  .input-group textarea {
    width: 100%;
    padding: 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    background-color: #f9f9f9;
}
button {
    margin-top: 40rpx;
    background-color: #007aff;
    color: white;
}
