
/* 保持原有样式不变 */
.container {
  padding: 20px;
}
.detail-card {
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.detail-item {
  display: flex;
  margin-bottom: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid #f5f5f5;
}
.detail-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}
.label {
  width: 80px;
  color: #666;
  font-weight: bold;
}
.value {
  flex: 1;
}
.loading, .error {
  text-align: center;
  padding: 50px 0;
  color: #999;
}
.retry-btn {
  margin-top: 15px;
  background-color: #007aff;
  color: white;
  width: 120px;
}
