
.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh; /* 确保内容居中 */
}
.logo {
		height: 200rpx;
		width: 200rpx;
		margin-top: 50rpx;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 50rpx;
}
.text-area {
		display: flex;
		justify-content: center;
}
.title {
		font-size: 36rpx;
		color: #8f8f94;
}

	/* 提示文字样式 */
.hint-text {
		margin-top: 50rpx;
		font-size: 28rpx;
		color: #888;
		text-align: center;
}
