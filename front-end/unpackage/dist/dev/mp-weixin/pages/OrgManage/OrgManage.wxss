
.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
}
.picker {
		padding: 16rpx;
		border: 1px solid #ccc;
		border-radius: 8rpx;
		margin: 20rpx 0;
}
.menu-item {
		width: 80%;
		height: 100px;
		background-color: #007AFF;
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 15px 0;
		border-radius: 10px;
		font-size: 18px;
}
.menu-item:active {
		background-color: #0062CC;
}
