
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.header {
	width: 100%;
	text-align: center;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}
.header-title {
	font-size: 40rpx;
	font-weight: bold;
	color: #333;
}
.logo {
	height: 200rpx;
	width: 200rpx;
	margin: 50rpx auto;
}
.login-form {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100%;
}
.input {
	width: 80%;
	height: 80rpx;
	margin-bottom: 30rpx;
	padding: 10rpx;
	border: 1rpx solid #ccc;
	border-radius: 10rpx;
}
.register-link {
	margin-bottom: 30rpx;
	color: #007AFF;
	text-decoration: underline;
	font-size: 28rpx;
}
.login-btn {
	width: 80%;
	height: 80rpx;
	background-color: #007AFF;
	color: #fff;
	border-radius: 10rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
