
.container {
		padding: 20rpx;
}
.picker {
		padding: 20rpx;
		background-color: #f5f5f5;
		border-radius: 10rpx;
		margin-bottom: 30rpx;
		text-align: center;
}
.record-title {
		font-size: 32rpx;
		font-weight: bold;
		margin-bottom: 20rpx;
}
.record-list {
		display: flex;
		flex-direction: column;
}
.record-item {
		background-color: #fff;
		padding: 20rpx;
		margin-bottom: 10rpx;
		border-radius: 10rpx;
		box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}
